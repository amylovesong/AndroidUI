<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s_100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@android:color/holo_green_dark"
    android:padding="@dimen/s_20dp">

    <ImageView
        android:id="@+id/s_item_view_flipper_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/s_item_view_flipper_text"
        android:layout_width="@dimen/s_0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/s_6dp"
        android:layout_marginStart="@dimen/s_6dp"
        android:layout_marginLeft="@dimen/s_6dp"
        app:layout_constraintTop_toTopOf="@id/s_item_view_flipper_icon"
        style="@android:style/TextAppearance"
        app:layout_constraintStart_toEndOf="@id/s_item_view_flipper_icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="消息通告"/>

</android.support.constraint.ConstraintLayout>