<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/s_60dp"
    android:padding="@dimen/s_20dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/s_item_sample_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        style="@android:style/TextAppearance"
        tools:text="sample_name"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/s_item_sample_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/s_item_sample_name"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:text="sample_desc"/>

</android.support.constraint.ConstraintLayout>